.humidity

    lc-numeric-input(
        required="true",
        label="Значение влажности",
        min="10",
        max="98",
        step="1",    
        input-id="humValue",
        input-object="$parent.climaticForm.humValue",
        submitted="$parent.submitted"
    )

    lc-numeric-input(
        required="true",
        label="Количество часов",
        min="0",
        step="0.25",    
        input-id="humTime",
        input-object="$parent.climaticForm.humTime",
        submitted="$parent.submitted"
    )