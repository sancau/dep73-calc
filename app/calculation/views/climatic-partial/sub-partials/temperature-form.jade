.temperature
    
    lc-numeric-input(
        required="true",
        label="Рабочая температура",
        min="-70",
        max="180",
        step="1",    
        input-id="workTemp",
        input-object="$parent.climaticForm.workTemp",
        submitted="$parent.submitted"
    )

    lc-numeric-input(
        required="true",
        label="Количество часов (рабочая температура)",
        min="0",
        step="0.1", 
        input-id="workTime",
        input-object="$parent.climaticForm.workTime",
        submitted="$parent.submitted"
    )

    lc-numeric-input(
        required="true",
        label="Предельная температура",
        min="-70",
        max="180",
        step="1",   
        input-id="edgeTemp",
        input-object="$parent.climaticForm.edgeTemp",
        submitted="$parent.submitted"
    )

    lc-numeric-input(
        required="true",
        label="Количество часов (предельная температура)",
        min="0",
        step="0.1", 
        input-id="edgeTime",
        input-object="$parent.climaticForm.edgeTime",
        submitted="$parent.submitted"
    )