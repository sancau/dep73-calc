.operation

    lc-string-input(
        required="true",
        label="Пукт требований ТУ или программы",
        input-id="documentItem",
        input-object="block.climaticForm.documentItem",
        model="block.data.values.documentItem",
        submitted="climatic.submitted"
    )

    lc-string-input(
        required="true",
        label="Описание операции (кратко)",
        input-id="operationDescription",
        input-object="block.climaticForm.operationDescription",
        model="block.data.values.operationDescription",
        submitted="climatic.submitted"
    )
    
    lc-numeric-input(
        required="true",
        label="Время на операцию (часов)",
        min="0",
        step="0.25",    
        input-id="operationTime",
        input-object="block.climaticForm.operationTime",
        model="block.data.values.operationTime",
        submitted="climatic.submitted"
    )