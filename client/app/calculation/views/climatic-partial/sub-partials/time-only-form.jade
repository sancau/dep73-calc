    Description: A generic form for those cases where only time is mentioned
    Author: Alexander Tatchin | github.com/sancau

.genericTime

    lc-string-input(
        required="true",
        label="Пункт требований ТУ или программы",
        input-id="documentItem",
        input-object="block.climaticForm.documentItem",
        model="block.data.values.documentItem",
        submitted="climatic.submitted"
    )

    lc-text-input(
        required="false", 
        label="Комментарий", 
        rows="2", 
        input-id="phaseComment",
        input-object="block.climaticForm.phaseComment",
        model="block.data.values.phaseComment",
        submitted="climatic.submitted"
    )  

    lc-numeric-input(
        required="true",
        label="Время на этап",
        min="0",
        step="0.25",    
        input-id="phaseTime",
        input-object="block.climaticForm.phaseTime",
        model="block.data.values.phaseTime",
        submitted="climatic.submitted"
    )

    lc-numeric-input(
        required="true",
        label="Количество закладок",
        min="1",
        step="1",    
        input-id="iterations",
        input-object="block.climaticForm.iterations",
        model="block.data.values.iterations",
        submitted="climatic.submitted"
    )