form(
    role="form",
    name="$parent.generalInfoForm",
    novalidate="novalidate",
    ng-model="generalForm"
)

    lc-string-input(
        required="true",
        label="Наименование изделия",
        input-id="name",
        input-object="generalInfoForm.name",
        model="formModel.name",
        submitted="submitted"
    )

    lc-select-input(
        required="true",
        label="Вид испытаний",
        input-id="type",
        input-object="generalInfoForm.type",
        options="typeOptions",
        selected-option="formModel.type.code",
        submitted="submitted"
    )
    
    //- lc-select-input(
    //-     required="true",
    //-     label="Вариант настроек",
    //-     input-id="settings",
    //-     input-object="generalInfoForm.settings",
    //-     options="presetOptions",
    //-     selected-option="formModel.settings.code",
    //-     submitted="submitted"
    //- )

    lc-string-input(
        required="true",
        label="Руководящий документ", 
        input-id="doc", 
        input-object="generalInfoForm.doc",
        model="formModel.document",
        submitted="submitted"
    )

    lc-text-input(
        required="false", 
        label="Комментарий", 
        rows="5", 
        input-id="comment",
        input-object="generalInfoForm.comment",
        model="formModel.comment",
        submitted="submitted"
    )