form(
    role="form",
    name="general.generalInfoForm",
    novalidate="novalidate",
    ng-model="generalForm"
)

    lc-string-input(
        required="true",
        label="Наименование изделия",
        input-id="name",
        input-object="general.generalInfoForm.name",
        model="general.formModel.name",
        submitted="general.submitted"
    )

    lc-select-input(
        required="true",
        label="Вид испытаний",
        input-id="type",
        input-object="general.generalInfoForm.type",
        options="general.typeOptions",
        selected-option="general.formModel.type.code",
        submitted="general.submitted"
    )

    lc-string-input(
        required="true",
        label="Руководящий документ", 
        input-id="doc", 
        input-object="general.generalInfoForm.doc",
        model="general.formModel.document",
        submitted="general.submitted"
    )
    
    lc-string-input(
        required="true",
        label="Расчёт произвёл", 
        input-id="spec", 
        input-object="general.generalInfoForm.spec",
        model="general.formModel.specialist",
        submitted="general.submitted"
    )

    lc-text-input(
        required="false", 
        label="Комментарий", 
        rows="5", 
        input-id="comment",
        input-object="general.generalInfoForm.comment",
        model="general.formModel.comment",
        submitted="general.submitted"
    )
