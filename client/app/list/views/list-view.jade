.well
    
    a(ui-sref="calculation-new")
        button.btn Новый расчёт
    
    hr
    h3 История расчётов
    hr
    
    pre(ng-hide="!list.calculationsList.length == 0") Пока расчётов нет
    table#list-view.table.table-striped(ng-hide="list.calculationsList.length == 0")
        thead
            tr
                th Изделие
                th Вид испытаний
                th Составитель
                th Последнее изменение
        tbody

        tr(
            ng-repeat="calculation in list.calculationsList",
            ng-click="list.showCalculation(calculation)"
        )
            td {{ calculation.general.name }}
            td {{ calculation.general.type.label }}
            td {{ calculation.meta.author || 'Нет данных' }}
            td {{ calculation._updated }}

